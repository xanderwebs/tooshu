<% {:short_name => "Name", :address1=>"Address 1", :address2 => "Address 2", :city => "City", :state => "State", :zipcode =>"Zip Code"}.each do |k,v| %>
	<div class="control-group">
		<label class="control-label"><%= v %></label>										
		<div class="controls">
			<% if k.eql?(:state) %>		
				<%= f.select k, [['CA', 'CA']] %>
			<% else %>
				<%= f.text_field k, :class=>"input-xlarge" %>
			<% end %>

		</div>

	</div>
<% end %>
<%= hidden_field :location, :user_id, :value => @current_user.id %>
<%= hidden_field :location, :is_default, :value => true %>


<div class="control-group">
	<div class="controls">
		<%= f.submit :class=>"btn btn-primary" %>
	</div>
</div>