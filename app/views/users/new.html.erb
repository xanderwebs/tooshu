<div class="row-fluid">
	<div class="span12">
		<%= render :partial => "layouts/flash_messages" %>
	</div>
</div>

<div class="row-fluid">		
	<div class="span6">
		<%= render "hero" %>
	</div>
	<div class="span6">
		<div class="control-group">
			<%= form_for(:user, :url => :users, :method =>:post, :html=>{:class=>"form-horizontal"}) do |f| %>
				<h3 style="text-align:center;">Get Started!</h3>
				<%= label_tag 'first_name', 'First Name', :class=>"control-label", :for=>"user[first_name]"%>	
				<div class="controls">
					<%= text_field :user, :first_name, :class=>"input-xlarge", :id=>"user[first_name]" %>				
				</div>
				
				<%= label_tag 'last_name', 'Last Name', :class=>"control-label", :for=>"user[last_name]"%>	
				<div class="controls">
					<%= text_field :user, :last_name, :class=>"input-xlarge", :id=>"user[last_name]" %>				
				</div>
				
				<%= label_tag 'email', 'Email', :class=>"control-label", :for=>"user[email]"%>	
				<div class="controls">
					<%= text_field :user, :email, :class=>"input-xlarge", :id=>"user[email]" %>				
				</div>
				
				<%= label_tag 'password', 'Password', :class=>"control-label", :for=>"user[password]"%>	
				<div class="controls">
					<%= password_field :user, :password, :class=>"input-xlarge", :id=>"user[password]"  %>				
				</div>
				
				<%= label_tag 'password_confirmation', 'Confirm Password', :class=>"control-label", :for=>"user[password_confirmation]"%>	
				<div class="controls">
					<%= password_field :user, :password_confirmation, :class=>"input-xlarge", :id=>"user[password_confirmation]"  %>				
				</div>

				<%= label_tag 'sign_up_code', 'Sign Up Code', :class=>"control-label", :for=>"sign_up_code"%>	
				<div class="controls">					
					<input type="text" class="input-xlarge" name="sign_up_code" />
				</div>
				
				<div class="controls">
					<%= submit_tag "Sign Up", :class=>"btn btn-success"%>				
				</div>
			<%end%>	
		</div>			
	</div>	
</div>


